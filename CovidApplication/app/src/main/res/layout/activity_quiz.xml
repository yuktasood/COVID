<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    android:orientation="vertical"
    tools:context=".QuizActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@color/colorWhite"
            android:textSize="15pt"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorBlack"
            android:text="Take the Self Assesment Test!"
            android:textAlignment="center" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/q1"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="7pt"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"
                android:text="\n What is your gender?" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="MALE" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="FEMALE" />

        </RadioGroup>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">
        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="7pt"
                android:text="What is your age?" />

            <RadioButton
                android:id="@+id/young"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Below 20"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-40"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40-60"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/veryold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 and above"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

        <RadioGroup
            android:id="@+id/rg3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/q3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="7pt"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:text="Have you experienced any of the following symptoms? \n 1. Cough\n 2. Fever \n 3.Difficulty in Breathing " />

            <RadioButton
                android:id="@+id/q3_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/q3_notreally"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some of them"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/q3_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">
        <RadioGroup
            android:id="@+id/rg4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/q4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                android:textSize="7pt"
                android:background="@color/colorWhite"
                android:text="Have you had any of the following diseases? \n 1. Diabetes \n 2. Lung Disease \n 3. Hyper Tension \n 4. Heart Disease" />

            <RadioButton
                android:id="@+id/q4_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/q4_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">
        <RadioGroup
            android:id="@+id/rg5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/q5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:textColor="@color/colorBlack"
                android:text="Have you travelled internationally in the last 14 days?"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/q5_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/q5_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">
        <RadioGroup
            android:id="@+id/rg6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/q6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:background="#FFFFFF"
                android:text="Have you interacted with any COVID-19 patient?"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/q6_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:layout_marginLeft="10dp"
                />

            <RadioButton
                android:id="@+id/q6_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@drawable/rounded_corners"
            android:layout_gravity="center"
            android:text="SUBMIT"/>
    </LinearLayout>
</ScrollView>
